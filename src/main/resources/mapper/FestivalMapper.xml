<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.app.mapper.FestivalMapper">

  
  <resultMap id="FestivalMap" type="com.example.app.domain.Festival">
    <id     column="id"          property="id"/>
    <result column="fes_name"    property="fesName"/>
    <result column="year"        property="year"/>
    <result column="location"    property="location"/>
    <result column="latitude"    property="latitude"/>
    <result column="longitude"   property="longitude"/>
  </resultMap>

  <select id="findAll" resultMap="FestivalMap">
    SELECT
      id, fes_name, year, location, latitude, longitude
    FROM festival
  </select>

  <select id="findById" parameterType="long" resultMap="FestivalMap">
    SELECT
      id, fes_name, year, location, latitude, longitude
    FROM festival
    WHERE id = #{id}
  </select>

</mapper>

